{
  "name": "Deezer Enhancements",
  "version": "1.1.2",
  "manifest_version": 2,
  "description": "This extension helps to improve user experience of Deezer web app",
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/options_custom/lib/store.js",
      "src/options_custom/manifest.js",
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "options_page": "src/options_custom/index.html",
  "permissions": [
    "contentSettings",
    "notifications",
	"history",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.deezer.com/*"],
      "css": ["src/inject/inject.css"],
      "js": ["src/inject/inject.js"]
    }
  ]
}